[user]
    email = mstuchli@gmail.com
[branch]
    autosetuprebase = always
[color]
    ui = true
[core]
    trustctime = false
    editor = vim
[alias]
    ci = commit
    co = checkout
    ca = commit -a
    ls = log -5 --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    ll = log -5 --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
[push]
    default = simple
